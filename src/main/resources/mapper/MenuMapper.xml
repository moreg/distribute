<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jdsw.distribute.dao.MenuDao">
    <resultMap id="BaseResultMap" type="com.jdsw.distribute.model.Menu">
        <id column="id"  property="id" />
        <result column="name"  property="name" />
        <result column="parent_id"  property="parentId" />
        <result column="url"  property="url" />
        <result column="icon"  property="icon" />
        <result column="order"  property="order" />



    </resultMap>
    <sql id="Base_Column_List">
    id, `name`, parentId, url, icon, `order`
  </sql>
    <select id="findTree"  resultMap="BaseResultMap" parameterType="String">
        SELECT  sy.id,sy.`name`,sy.parentId,sy.`order`,sy.url,sy.icon
        FROM sys_menu sy
        LEFT JOIN role_menu rm on sy.menuId = rm.menu_id
        LEFT JOIN `user_role` ur on ur.roleid = rm.role_id
        LEFT JOIN `user` us on us.id = ur.userid
        WHERE us.username = #{username}
    </select>
    <select id="getMenuList" resultType="com.jdsw.distribute.model.SysMune">
        SELECT  sy.menuId,sy.parentId,sy.resourceDesc,sy.resourceName,sy.resourceString,sy.resourceType,sy.resourceTypeName
        FROM sys_menu sy
    </select>
    <select id="findBranch" resultMap="BaseResultMap">
         select bm.id,bm.label,bm.parent_id,bm.order from branch_menu bm
    </select>
</mapper>